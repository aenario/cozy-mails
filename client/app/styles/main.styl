@import 'nib'

blue = #34A6FF
green = #5C5
orange = #fe8800
darkgrey = #333
darkgrey = #CCC


@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');


body
  padding-top: 10px
  font-family: main

legend
    font-family: styled

fieldset
font-weight: normal

.sidebar-nav
    padding: 9px 0

iframe
    border-top-width: 0px
    border-right-width: 0px
    border-bottom-width: 0px
    border-left-width: 0px
    width: 100%

textarea#html
    width: 100%
    
    
blockquote
    border-left: 5px gray solid
    margin-left: 15px
    padding-left: 10px
 
.mailbox_well
    input
        border: 1px solid lightgrey
        box-shadow: 0
        border-radius: 0px
        shadow: none
        font-family: styled, helvetica

    input:hover
        border: 1px solid blue
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

    input:focus
    input:active
        border: 1px solid orange
        box-shadow: none

    .controls p
        font-size: 11px

.column
    height: 770px
    overflow: auto

#message_box
    position: absolute
    top: 15px
    right: 15px
    z-index: 9
    

#newmailbutton
#sentbutton
#additional_bar
.btn-toolbar
    display: none

.nav 
    li
        .active
            a
                background: blue + 50%
        a
            color: darkgrey
        a:hover
            background: orange
            color: white

.well
    background: white
    box-shadow: none
    border: 0

.form-actions
    background: transparent

.save_mailbox
    margin-right: 5px

#no-mails-message
    padding-top: 0px

.btn
    border: 1px solid blue
    background: blue
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    font-weight: bold

.btn:hover
    background: orange
    color: white
    border-color: orange
    text-shadow: none

.mailbox_well
    border-bottom: 1px solid lightgrey
    border-radius: 0

.edit-mailbox
    margin-right: 5px

.mailbox-status
    margin-left: 10px
    font-weight: normal
    font-size: 14px
